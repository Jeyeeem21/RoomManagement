<!-- Add/Edit Modal -->
<div id="collegeModal" class="fixed inset-0 z-50 flex items-center justify-center bg-black bg-opacity-40 hidden">
  <div class="bg-white rounded shadow-lg w-11/12 md:w-2/3 lg:w-1/2 p-6">
    <div class="flex items-center justify-between mb-4">
      <h3 class="text-xl font-semibold">Add / Edit College</h3>
      <button id="closeCollegeModal" class="text-gray-500">âœ•</button>
    </div>
    <form id="collegeForm" class="space-y-4">
      <div>
        <label class="block text-sm text-gray-700">College Name</label>
        <input id="collegeName" name="name" class="w-full border rounded px-3 py-2" placeholder="e.g., College of Engineering" />
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <label class="block text-sm text-gray-700">Dean</label>
          <input id="collegeDean" name="dean" class="w-full border rounded px-3 py-2" placeholder="Dean full name" />
        </div>
        <div>
          <label class="block text-sm text-gray-700">Email</label>
          <input id="collegeEmail" name="email" type="email" class="w-full border rounded px-3 py-2" placeholder="dean@college.edu" />
        </div>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <label class="block text-sm text-gray-700">Established</label>
          <input id="collegeEstablished" name="established" class="w-full border rounded px-3 py-2" placeholder="e.g., 1985" />
        </div>
        <div>
          <label class="block text-sm text-gray-700">Phone</label>
          <input id="collegePhone" name="phone" class="w-full border rounded px-3 py-2" placeholder="(555) 123-4567" />
        </div>
      </div>

      <div class="flex items-center justify-end gap-3">
        <button type="button" id="cancelCollege" class="px-4 py-2 bg-white border border-green-100 text-green-600 rounded hover:bg-green-50 transition">Cancel</button>
        <button type="submit" class="px-4 py-2 bg-green-600 hover:bg-green-700 text-white rounded transition">Save College</button>
      </div>
    </form>
  </div>
</div>

<script>
  // Simple modal toggle logic
  const openBtn = document.getElementById('openAddCollege');
  const modal = document.getElementById('collegeModal');
  const closeBtn = document.getElementById('closeCollegeModal');
  const cancelBtn = document.getElementById('cancelCollege');

  function openModal() { modal.classList.remove('hidden'); }
  function closeModal() { modal.classList.add('hidden'); }

  if (openBtn) openBtn.addEventListener('click', openModal);
  if (closeBtn) closeBtn.addEventListener('click', closeModal);
  if (cancelBtn) cancelBtn.addEventListener('click', closeModal);

  // Prevent actual submit for demo; wiring to backend can be added later
  const form = document.getElementById('collegeForm');
  if (form) {
    form.addEventListener('submit', (e) => {
      e.preventDefault();
      // gather values (could be sent via fetch to server)
      const data = {
        name: document.getElementById('collegeName').value,
        dean: document.getElementById('collegeDean').value,
        email: document.getElementById('collegeEmail').value,
        established: document.getElementById('collegeEstablished').value,
        phone: document.getElementById('collegePhone').value
      };
      console.log('Save college', data);
      closeModal();
    });
  }
</script>

